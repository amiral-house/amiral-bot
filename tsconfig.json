{
  "compilerOptions": {
    "module": "CommonJS",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["es2017"],
    "outDir": "./build"
  },
  "include": ["./index.ts", "./src/**/*.ts", "./index.d.ts"]
}
